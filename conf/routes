# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                                   controllers.Application.index
GET     /appearances/more/:page             controllers.Application.more(page: Integer)

GET     /characters                         controllers.CharactersController.index(query = "")
GET     /characters/:query                  controllers.CharactersController.index(query: String)
GET     /characters/show/:id                controllers.CharactersController.show(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                       controllers.Assets.versioned(path="/public", file: Asset)
GET     /webjars/*file                      controllers.WebJarAssets.at(file)

GET     /javascriptRoutes                   controllers.Application.jsRoutes
